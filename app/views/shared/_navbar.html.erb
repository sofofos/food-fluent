<!-- _navbar.html.erb !-->

<header class='navbar navbar-expand-sm navbar-light navbar-lewagon sticky'>
  <%= link_to '/', class: 'navbar-brand' do %>
    <%= image_tag '_logo-cutlery.png',
        class: 'nav-link-image'
    %>
  <% end %>  <!-- end nav-home !-->

  <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#nav-collapse' aria-controls='nav-collapse' aria-expanded='false' aria-label='Toggle navigation'>
    <span class='navbar-toggler-icon'>
    </span> <!-- end nav-toggle-icon !-->
  </button>  <!-- end nav-toggle !-->

  <div class='collapse navbar-collapse'>
    <ul class='navbar-nav mr-auto dropdown-custom'>
      <% if user_signed_in? %>
        <li class='nav-item dropdown avatar-border'>
          <%= image_tag current_user.avatar_path,
            class: 'avatar-large dropdown-toggle nav-link-image',
            data: { toggle: 'dropdown' },
            'aria-haspopup': true,
            'aria-expanded': false
          %>

        <div class='dropdown-menu dropdown-menu-right' aria-labelledby='nav-collapse-list-avatar'>
          <div class='navbar-links'>
            <%= link_to 'Dashboard',
                dashboard_path,
                class:'navbar-link'
            %>
            <%= link_to 'Logout',
                destroy_user_session_path,
                method: :delete,
                class: 'navbar-link'
            %>
          </div>
        </div>
      </li>
      <% else %>
      <div class='d-flex'>
        <h5 class="navbar-link">
          <%= link_to 'Login', new_user_session_path %>
        </h5>
        <h5 class="navbar-link">
          <%= link_to 'Signup', new_user_registration_path %>
        </h5>
      </div> <!-- end nav-plain-list-item-container !-->
      <% end %>  <!-- end user_signed_in? !-->
    </ul>  <!-- end nav-collapse-list !-->
  </div> <!-- end nav-collapse !-->
</header> <!-- end nav !-->
<% console %>
