
<div class="container">
  <div class="py-5">

    <h1>
      <%= @restaurant.name %>
    </h1>
    <p>
      <%= @restaurant.location %>
    </p>


  <% @users.each do |user| %>
  <h2><%= user.name %></h2>
  <ul>
    <% @restaurant.dishes_for(user).each do |dish| %>
      <li><%= dish.name %></li>
    <% end %>
  </ul>
<% end %>

<%= link_to "Back", restaurants_path %>
    
<h2>Entire menu</h2>
    
    




    <h2>
      Starters
    </h2>
      <div class="cards">
        <% @starter.each do |dish| %>
