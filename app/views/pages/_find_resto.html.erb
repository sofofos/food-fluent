<div class='cards-friends'>
  <%= form_tag restaurants_path, method: :get do %>
    <div class='card-user'>
    <% @user.friends.each do |friend| %>
      <div class="card-user-friends card-border card-position">
        <label class="green-checkbox-container">
          <input type="checkbox" checked="check">
          <span class="green-checkbox">
            <%= check_box_tag 'friend_ids[]', friend.id, id: friend, class: 'form-control'%>
            <%= friend.name %>
          </span>
        </label>
      </div>
    <% end %>
    <%= submit_tag 'Search', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
