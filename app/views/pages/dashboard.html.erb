<h1>Dashboard</h1>
<!-- user-info -->
<div class="welcome">
  <h5> Welcome <%= @user.name %>!</h5>
    <ul>Dietary restrictions:
      <% @user.diet_profiles.each do |tag| %>
      <li>
        <%= tag.health_label.name %>
      </li>
      <% end %>
    </ul>
</div>

<!-- friends-list -->
<div>
  <h5 class="friends-list">Your Friends</h5>
    <% @user.friends.each do |friend| %>
<!-- friend-card -->
    <div class="friend-card">
      <%=  friend.name %>
      <% friend.diet_profiles.each do |tag| %>
        <i class="fas fa-ice-cream"><%= tag.health_label.name  %> </i>
      <% end %>
    </div>
    <% end %>
</div>

<!-- search-friend -->
<!-- friend-requests -->
  <%= link_to "See friend requests", friends_path %>

<!-- find-restaurant -->
  <!-- select-friends -->
  <%= form_tag restaurants_path, method: :get do %>
    <% @user.friends.each do |friend| %>
      <div class="d-flex">
      <%= check_box_tag :query,
        params[:query],
        checked_value: friend.id,
        label: friend.name,
        class: "form-control"
      %>
      <%= friend.name %>
      </div>
    <% end %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
  <!-- add-location -->
  <%= link_to "See restaurants", restaurants_path %>

