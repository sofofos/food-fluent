<h1>Dashboard</h1>
<!-- user-info -->
<div class="user-info">
  <h5> Welcome <%= @user.name %>!</h5>
    <ul>Dietary restrictions:
      <% @user.diet_profiles.each do |tag| %>
      <li>
        <%= tag.health_label.name %>
      </li>
      <% end %>
    </ul>
</div>

  <!-- friends-list -->
  <div class='container'>
    <h5 class='friends-list'>Your Friends</h5>
      <% @user.friends.each do |friend| %>
      <div class='friend-card'>
        <%= friend.name %>
        <% friend.diet_profiles.each do |tag| %>
          <i class='fas fa-ice-cream'><%= tag.health_label.name  %> </i>
        <% end %>
      </div>
      <% end %>

    <div class='container-friends'>
      <div class='container-friends-find'>
        <%= link_to 'Find Friends', friends_path %>
      </div>
      <div class='container-friends-see'>
        <%= link_to 'See Friend Requests', friends_path %>
      </div>
    </div>
  </div>


<%= link_to "add a diet profile", new_diet_profile_path %>

  <%= link_to 'restaurants', restaurants_path %>

<!-- find-restaurant -->

  <!-- select-friends -->
  <div class='container' id='dashboard-search'>
    <%= form_tag restaurants_path, method: :get do %>
      <% @user.friends.each do |friend| %>
      <div class='d-flex'>
        <%= check_box_tag 'friend_ids[]', friend.id, id: friend, class: 'form-control'%>
        <%= friend.name %>
      </div>
      <% end %>
      <%= submit_tag 'Search', class: 'btn btn-primary' %>
    <% end %>
  </div>
