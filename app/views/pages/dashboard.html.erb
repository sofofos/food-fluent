      <%= render 'friends/results' %>
    <% end %>

  <!-- friends-list + restaurant search !-->
    <div>
      <%= render 'friends/list' %>
    </div>
  </div>
</div>

<div class='dashboard-container'>
    <!-- disable for testing !-->
    <%# unless @user.requested_friends.empty? %>
    <div class='dashboard-content'>
      <%= render 'friends/requests' %>
    </div>
    <%# end %>
</div>
