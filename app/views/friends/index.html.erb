<!-- Friend requests received -->
<div class="">
  <% if @user.requested_friends %>

  <h3>Friend Requests:</h3>

  <% @requests.each do |friend| %>
  <%= friend.name%>
  <%= form_tag ({controller: 'friends', action: 'accept', method: 'post', id: friend.id}) do %>
    <input class="" type=submit value='Accept'>
    <% end %>
  <%= form_tag ({controller: 'friends', action: 'decline', method: 'post', id: friend.id}) do %>
    <input class="" type=submit value='Decline'>
    <% end %>
  <% end %>
  <% end %>
</div>

<!-- Friend Requests sent -->
<div class="">
  <% if @user.pending_friends %>
  <h3>Pending:</h3>
  <% @pending.each do |friend| %>
  <%= friend.name%>
  <% end %>
  <% end %>
</div>
